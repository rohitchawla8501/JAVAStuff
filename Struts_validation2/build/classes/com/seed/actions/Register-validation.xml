<?xml version="1.0" encoding="UTF-8"?>
 
 <!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="fname">
		<field-validator type="requiredstring">
			<message>First Name is a mandatory Field</message>
		</field-validator>
	</field>
	<field name="lname">
		<field-validator type="requiredstring">
			<message>Last Name is a mandatory Field</message>
		</field-validator>
	</field>
	<field name="emailid">
		<field-validator type="email">
			<message>Not a valid Email Id</message>
		</field-validator>
		<field-validator type="requiredstring">
			<message>Email Id is a mandatory Field</message>
		</field-validator>
	</field>
	<field name="age">
		<field-validator type="requiredstring">
			<message>Age is a mandatory Field</message>
		</field-validator>
	</field>
</validators>